while tries < 1:
    tries += 1
    coin = random.randint(1, 6000)
    if coin <2999:
        print('Heads')
        H += 1
    if coin >2999 and coin <6000:
        print ('Tails')
        T += 1
    if coin == 6000:
        print('Edge')
        Edges += 1 
        
